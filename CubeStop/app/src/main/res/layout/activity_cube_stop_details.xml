<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CubeStopDetails">

    <ImageView
        android:id="@+id/food"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shops"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shops"
        app:layout_constraintStart_toStartOf="@+id/food"
        app:layout_constraintTop_toBottomOf="@+id/food" />

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/wifi"
        app:layout_constraintStart_toStartOf="@+id/food"
        app:layout_constraintTop_toBottomOf="@+id/shops" />

    <ImageView
        android:id="@+id/kids"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:background="@drawable/kids"
        app:layout_constraintEnd_toEndOf="@+id/fuel"
        app:layout_constraintTop_toTopOf="@+id/wifi" />

    <ImageView
        android:id="@+id/parking"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/park"
        app:layout_constraintStart_toStartOf="@+id/wifi"
        app:layout_constraintTop_toBottomOf="@+id/wifi" />

    <ImageView
        android:id="@+id/ATM"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/atm"
        app:layout_constraintEnd_toEndOf="@+id/kids"
        app:layout_constraintStart_toStartOf="@+id/wifi"
        app:layout_constraintTop_toTopOf="@+id/parking" />

    <ImageView
        android:id="@+id/fuel"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:background="@drawable/fuel"
        app:layout_constraintEnd_toEndOf="@+id/washroom"
        app:layout_constraintTop_toTopOf="@+id/shops" />

    <ImageView
        android:id="@+id/washroom"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/washroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Available: 15"
        android:textAlignment="center"
        android:textColor="#36881D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/parking"
        app:layout_constraintEnd_toEndOf="@+id/parking"
        app:layout_constraintStart_toStartOf="@+id/parking" />
</androidx.constraintlayout.widget.ConstraintLayout>